{
  "name": "mlform",
  "version": "0.1.2",
  "description": "Composable form generation utilities for machine learning backend integration",
  "license": "MIT",
  "author": {
    "name": "Pablo Ulloa Santín",
    "email": "pablo.ulloa.santin@udc.es",
    "url": "https://github.com/UlloaSP"
  },
  "contributors": [
    {
      "name": "Pablo Ulloa Santín",
      "email": "pablo.ulloa.santin@udc.es",
      "url": "https://github.com/UlloaSP"
    }
  ],
  "keywords": [
    "lit",
    "web-components",
    "forms",
    "form-generator",
    "strategies",
    "typescript",
    "zod",
    "ml",
    "machine-learning",
    "frontend",
    "models",
    "ui",
    "user-interface",
    "library"
  ],
  "homepage": "https://ulloasp.github.io/mlform/",
  "bugs": {
    "url": "https://github.com/UlloaSP/mlform/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UlloaSP/mlform.git"
  },
  "private": false,
  "type": "module",
  "files": ["dist/**"],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/UlloaSP"
    }
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/mlform.mjs"
    },
    "./extensions": {
      "types": "./dist/types/extensions/index.d.ts",
      "import": "./dist/mlform/extensions.mjs"
    },
    "./strategies": {
      "types": "./dist/types/strategies/index.d.ts",
      "import": "./dist/mlform/strategies.mjs"
    }
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "types": "dist/types/index.d.ts",
  "packageManager": "npm@11.5.1",
  "scripts": {
    "lint": "npx @biomejs/biome check --write",
    "type": "tsc -p tsconfig.json --noEmit",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "link": "npm run build && npm link",
    "ci": "npm run lint && npm run type && npm run test && npm run build"
  },
  "dependencies": {
    "lit": "3.3.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.9.2",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4",
    "vite-plugin-dts": "^4.5.4",
    "@vitest/coverage-v8": "^4.0.4"
  }
}
