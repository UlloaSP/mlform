{
  "name": "mlform",
  "version": "0.0.0",
  "license": "MIT",
  "author": "UlloaSP <ulloasantinpablo2@gmail.com>",
  "private": true,
  "type": "module",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/mlform.mjs"
    },
    "./extensions": {
      "types": "./dist/types/extensions/index.d.ts",
      "import": "./dist/mlform/extensions.mjs"
    },
    "./strategies": {
      "types": "./dist/types/strategies/index.d.ts",
      "import": "./dist/mlform/strategies.mjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@11.4.2",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "type": "tsc -p tsconfig.json --noEmit",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "docs": "typedoc",
    "docs:serve": "typedoc && npx http-server docs",
    "link": "vite build && npm link",
    "ci": "npm run lint && npm run format:check && npm run type && npm run test && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "lit": "^3.3.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "typedoc": "^0.28.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "zod": "^3.25.67"
  }
}
